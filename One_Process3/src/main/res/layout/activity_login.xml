<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dip"
        android:id="@+id/linear_3"
        android:layout_centerInParent="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            card:cardBackgroundColor="@color/white"
            card:cardCornerRadius="10dip">
            <EditText
                android:textSize="13dp"
                android:textColor="@color/black"
                android:id="@+id/activity_login_edit_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入用户名"
                android:textColorHint="@color/hui"
                android:drawableLeft="@drawable/a"
                android:drawablePadding="8dp"
                android:singleLine="true" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="15dip"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            card:cardBackgroundColor="@color/white"
            card:cardCornerRadius="10dip">
            <EditText
                android:textSize="13dp"
                android:textColor="@color/black"
                android:id="@+id/activity_login_edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/b"
                android:drawablePadding="8dp"
                android:hint="请输入密码"
                android:textColorHint="@color/hui"
                android:inputType="textPassword" />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/text14"
            android:layout_below="@+id/linear_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/忘记密码"
            android:textColor="@color/white"/>
        <LinearLayout
            android:id="@+id/linear_2"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text14"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/activity_login_bn_reg"
                android:layout_width="110dp"
                android:layout_height="27dp"
                android:layout_margin="10dp"
                android:background="@drawable/button"
                android:text="注册"
                android:textSize="15dp" />
            <Button
                android:id="@+id/activity_login_bn_login"
                android:layout_width="110dp"
                android:layout_height="27dp"
                android:layout_margin="10dp"
                android:background="@drawable/button2"
                android:text="登陆"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relative4"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/linear_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_toLeftOf="@+id/text15"
                android:layout_width="130dp"
                android:layout_height="1dip"
                android:background="@color/white"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/text15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其它登陆"
                android:textColor="@color/white"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text15"
                android:layout_width="130dp"
                android:layout_height="1dip"
                android:background="@color/white"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/relative4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_margin="10dp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/r1"/>
            <ImageButton
                android:layout_margin="10dp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/r2"/>
            <ImageButton
                android:layout_margin="10dp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/r3"/>
            <ImageButton
                android:layout_margin="10dp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/r4"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>