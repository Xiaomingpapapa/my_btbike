<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/d"
    >

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_start"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="开始游戏"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="100px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
               android:layout_marginLeft="400px"
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ice"/>
            <ImageView
               android:layout_marginLeft="400px"
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ice"/>
            <ImageView
                android:layout_marginLeft="400px"
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ice"/>
        </LinearLayout>
            <ImageView
                android:id="@+id/img_people2"
                android:layout_width="200px"
                android:layout_height="180px"
                android:src="@mipmap/people2"
                android:layout_marginBottom="220px"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="70px"
                android:layout_alignParentRight="true"/>
        <SeekBar
            android:layout_marginBottom="160px"
            android:id="@+id/seekBar"
            android:layout_width="1600px"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/seekbar_style2"
            android:thumb="@drawable/seekbar_thumb2"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
</LinearLayout>